<MyTyre>:
  Screen:
    GridLayout:
      cols:2
      #padding: 200
      Image:
        source:'logo2.png'
      BoxLayout:
        orientation:'vertical'
        spacing: 15
        TextInput:
          id:mt
          hint_text:'Matricula'
        TextInput:
          id:sh
          hint_text:'Senha'
          password:True
        Button:
          text:'Login'
          font_size: 20
          on_release: root.current = 'ac'
  Log:
    name: 'ty'
  TyreC:
    name: 'tyrec'
  Atualize:
    name: 'atualize'
  CriBd:
    name: 'cri'
  Cadastro:
    name: 'new_c'
  Actions:
    name: 'ac'
  Entry_Exit:
    name: 'entr'
  Saidap:
    name: 'sd'
  Entrap:
    name: 'enp'
  Relatorio:
    name: 'relatorio'

<Actions>:
  GridLayout:
    cols:2
    padding: 60
    spacing: 60
    Button:
      text:'Estepes'
      on_release: app.root.current = 'ty'
    Button:
      text:'Tpms'   
    Button:
      text:'Pneus'
      on_release: app.root.current = 'entr'
    Button:
      text:'Rodas'

<Log>:
  BoxLayout:
    orientation: 'vertical'
    #padding: 200
    spacing: 50
    ActionBar:
      ActionView:
        ActionPrevious:
          title:  'Estepes'
          on_release: app.root.current = 'ac'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    Button:
      text:'Buscar'
      on_release:app.root.current = 'tyrec'
    Button:
      text:'Atualizar'
      on_release: app.root.current = 'atualize'

<TyreC>:
  BoxLayout:
    orientation: 'vertical'
    #padding: 100
    spacing: 30
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Consulta Step'
          on_release: app.root.current = 'ty'
          on_release: dados_CR.text = ''
        ActionButton:
          text:'Sair'
          on_release:app.stop()

    Label:
      id: dados_CR
      text: ''
      font_size:20
    BoxLayout:
      TextInput:
        id:cr
        hint_text: 'Digite nº Carreta.'

    BoxLayout:
      orientation: 'horizontal'
      Button:
        id: k
        text:'Buscar'
        on_release: root.busc(cr.text)

<Atualize>:
  BoxLayout:
    orientation:'vertical'
    spacing: 30
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Atualizando'
          on_release: app.root.current = 'ty'
        ActionButton:
          text:'Sair'
          on_release: app.stop()
    GridLayout:
      spacing: 20
      cols:1
      TextInput:
        id:ar
        hint_text:'Nº Carreta'
      TextInput:
        id:br
        hint_text:'Nº Fogo'
      TextInput:
        id:cy
        hint_text:'Data AAAA.MM.DD'
    Button:
      text:'Update'
      font_size: 40
      on_release:root.buscr(ar.text, br.text, cy.text)

<CriBd>:
  BoxLayout:
    orientation:'vertical'
    spacing: 20
    Label:
      id:ss
      text:'BANCO DE DADOS NAO ENCONTRADO'
      font_size: 20
    Button:
      text:'Criar'
      on_release:app.root.current = 'new_c'
    Button:
      text:'Voltar'
      on_release: app.root.current = 'ty'
  
<Cadastro>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Inseir Novo Banco dados'
          on_release: app.root.current = 'ac'
        ActionButton:
          text:'Sair'
          on_release: app.stop()
    TextInput:
      id: cr
      hint_text:'Digite Nº Carreta'
    TextInput:
      id: ci
      hint_text:'Nº Estepe'
    TextInput:
      id: cy
      hint_text:'Data AAAA.MM.DD'
    Button:
      text:'Criar'
      on_release:root.insertd(cr.text, ci.text, cy.text)
<Entry_Exit>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    paddgin: 50
    ActionBar:
      ActionView:
        ActionPrevious:
          title: ''
          on_release: app.root.current = 'ac'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    Button:
      text: 'Saida Pneu'
      on_release: app.root.current = 'sd'
    Button:
      text: 'Entra Pneu'
      on_release: app.root.current = 'enp'
    Button:
      text: 'Relatorio'
      on_release: app.root.current = 'relatorio'
      on_release: app.root.get_screen('relatorio').addWidget()
<Saidap>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Saida de Pneus'
          on_release: app.root.current = 'entr'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    TextInput:
      id:os
      hint_text: 'Nº OS' 
    TextInput:
      id: li
      hint_text: 'Nº Fogos'
    Button:
      text: 'Adicionar'
      on_release: root.criar_l(li.text)
    Button:
      text: 'Enviar'
      on_release: root.criar(os.text)
<Entrap>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Entrada Pneus'
          on_release: app.root.current = 'entr'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    TextInput:
      hint_text: 'Nº Fogo'
    Button:
      text: 'Entrada'

<Relatorio>:
  BoxLayout:
    orientation: 'vertical'
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Relatorio Pneus Pendente'
          on_release: app.root.current = 'entr'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    ScrollView:
      BoxLayout:
        id: box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
