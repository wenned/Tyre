<MyTyre>:
  MDScreen:
    MDIconButton:
      pos_hint: {'center_x': .5, 'center_y': .8}
      icon: 'shield-car'
      user_font_size: '75sp'
    MDTextField:
      size_hint: 0.8, 0.2
      pos_hint: {'center_x': .5, 'center_y': .6}
      hint_text:'Matricula'
    MDTextField:
      size_hint: 0.8, 0.2
      pos_hint: {'center_x': .5, 'center_y': .4}
      hint_text:'Senha'
      password:True
    MDRoundFlatIconButton:
      icon: 'android'
      text:'Login'
      size_hint: 0.5, 0.1
      pos_hint: {'center_x': .5, 'center_y': .2}
      on_release: root.current = 'ac'
  Log:
    name: 'ty'
  TyreC:
    name: 'tyrec'
  Atualize:
    name: 'atualize'
  CriBd:
    name: 'cri'
  Cadastro:
    name: 'new_c'
  Actions:
    name: 'ac'
  Entry_Exit:
    name: 'entr'
  Saidap:
    name: 'sd'
  Entrap:
    name: 'enp'
  Relatorio:
    name: 'relatorio'

<Actions>:
  Image:
    source: 'ac.png'
  MDRaisedButton:
    text:'ESTEPES'
    size_hint: 0.7,0.07
    pos_hint: {'center_x': 0.5,'center_y': 0.7}
    on_release: app.root.current = 'ty'
  MDRaisedButton:
    text:'TPMS'
    size_hint: 0.7,0.07
    pos_hint: {'center_x': 0.5,'center_y': 0.6}   
  MDRaisedButton:
    text:'PNEUS'
    size_hint: 0.7,0.07
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    on_release: app.root.current = 'entr'
  MDRaisedButton:
    size_hint: 0.7,0.07
    pos_hint: {'center_x': 0.5,'center_y': 0.4}
    text:'RODAS'

<Log>:
  BoxLayout:
    orientation: 'vertical'
    #padding: 200
    spacing: 50
    ActionBar:
      ActionView:
        ActionPrevious:
          title:  'Estepes'
          on_release: app.root.current = 'ac'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    Button:
      text:'BUSCAR'
      on_release:app.root.current = 'tyrec'
    Button:
      text:'ATUALIZAR'
      on_release: app.root.current = 'atualize'

<TyreC>:
  BoxLayout:
    orientation: 'vertical'
    #padding: 100
    spacing: 30
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Consulta Step'
          on_release: app.root.current = 'ty'
          on_release: dados_CR.text = ''
        ActionButton:
          text:'Sair'
          on_release:app.stop()

    Label:
      id: dados_CR
      text: ''
      font_size:20
    BoxLayout:
      TextInput:
        id:cr
        hint_text: 'Digite nº Carreta.'

    BoxLayout:
      orientation: 'horizontal'
      Button:
        id: k
        text:'BUSCAR'
        on_release: root.busc(cr.text)

<Atualize>:
  BoxLayout:
    orientation:'vertical'
    spacing: 30
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Atualizando'
          on_release: app.root.current = 'ty'
        ActionButton:
          text:'Sair'
          on_release: app.stop()
    GridLayout:
      spacing: 20
      cols:1
      TextInput:
        id:ar
        hint_text:'Nº Carreta'
      TextInput:
        id:br
        hint_text:'Nº Fogo'
    Button:
      text:'ATUALIZAR'
      font_size: 40
      on_release:root.buscr(ar.text, br.text)

<CriBd>:
  BoxLayout:
    orientation:'vertical'
    spacing: 20
    Label:
      id:ss
      text:'BANCO DE DADOS NAO ENCONTRADO'
      font_size: 15
    Button:
      text:'CRIAR'
      on_release:app.root.current = 'new_c'
    Button:
      text:'VOLTAR'
      on_release: app.root.current = 'ty'
  
<Cadastro>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Inseir Novo Banco dados'
          on_release: app.root.current = 'ac'
        ActionButton:
          text:'Sair'
          on_release: app.stop()
    TextInput:
      id: cr
      hint_text:'Digite Nº Carreta'
    TextInput:
      id: ci
      hint_text:'Nº Estepe'
    Button:
      text:'CRIAR'
      on_release:root.insertd(cr.text, ci.text)
<Entry_Exit>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    paddgin: 50
    ActionBar:
      ActionView:
        ActionPrevious:
          title: ''
          on_release: app.root.current = 'ac'
          on_release: app.destroy_settings()
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    Button:
      text: 'SAIDA DE PNEU'
      on_release: app.root.current = 'sd'
    Button:
      text: 'ENTRADA DE PNEU'
      on_release: app.root.current = 'enp'
    Button:
      text: 'RELATORIO'
      on_release: app.root.current = 'relatorio'
      on_release: app.root.get_screen('relatorio').addWidget()
<Saidap>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Saida de Pneus'
          on_release: app.root.current = 'entr'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    TextInput:
      id:os
      hint_text: 'Nº OS' 
    TextInput:
      id: li
      hint_text: 'Nº Fogos'
    Button:
      text: 'ADICIONAR'
      on_release: root.criar_l(li.text)
    Button:
      text: 'ENVIAR'
      on_release: root.criar(os.text)
<Entrap>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 20
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Entrada Pneus'
          on_release: app.root.current = 'entr'
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    TextInput:
      id: nu
      hint_text: 'Nº Fogo'
    Button:
      text: 'ENTRADA'
      on_release: root.listEntry(nu.text)

<Relatorio>:
  BoxLayout:
    orientation: 'vertical'
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Relatorio Pneus Pendente'
          on_release: app.root.current = 'entr'
          #on_release: app.destroy_settings('relatorio')
        ActionButton:
          text: 'Sair'
          on_release: app.stop()
    ScrollView:
      BoxLayout:
        id: box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height

